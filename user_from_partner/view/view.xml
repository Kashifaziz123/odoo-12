<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="partner_view_form_inherited">
			<field name="name">partner.view.user</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath expr="//div" position="before">
					<header>
						<button string="Create Users"  attrs="{'invisible': [('user_active','=',True)]}" class="btn btn-success" type="object" name="create_users"/>
					</header>
					<field name="user_active" invisible="1"></field>

				</xpath>
				<xpath expr="//group[@name='misc']" position="after">
					<group string="Related User">
						<field name="related_user" string="user" ></field>
					</group>
				</xpath>
			</field>
		</record>




	</data>

</odoo>


