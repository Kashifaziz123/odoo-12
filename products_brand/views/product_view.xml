<odoo>
    <record id='view_model_brand_view_tree' model='ir.ui.view'>
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree string="Model Make">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id='view_brand_view_form' model='ir.ui.view'>
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Model Make">
                <sheet>
                    <field  name="brand_image" widget="image"  class="oe_avatar oe_left" />
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </group>
                    <field name="brand_ids" readonly="1" force_save="1">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="brand_id"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id='view_model_brand_action' model='ir.actions.act_window'>
        <field name="name">Product Brand</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new make
            </p>
        </field>
    </record>
    <menuitem name="Product Brand" id="product_brand_menu" parent="stock.menu_stock_root"/>
    <menuitem name="All Brands" id="all_brand_menu" parent="product_brand_menu" action="view_model_brand_action" sequence="1"/>
</odoo>
