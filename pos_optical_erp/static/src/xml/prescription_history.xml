<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

     <t t-name="PrescriptionButton">
            <div class='control-button'>
                Prescription History
            </div>
    </t>

    <t t-name="ProductsLine">
        <tr class='productlines'>
             <td><t t-esc='product.name' /></td>
            <td><t t-esc='product.customer[1]' /></td>
            <td><t t-esc='product.checkup_date' /></td>
            <td><t t-esc='product.dr[1]' /></td>
            <td><t t-esc='product.test_type[1]' /></td>
            <td><t t-esc='product.prescription_type' /></td>
            <td><t t-esc='product.state' /></td>
            <td> <i class="fa fa-print"/></td>

        </tr>
    </t>

    <t t-name="Product-ListWidget-Custom">
        <div class="clientlist-screen screen">
            <div class="full_width screen-content">
                        <section class="top-content">

                            <span class='button back'>
                                    <i class='fa fa-angle-double-left'></i>
                                Cancel
                                </span>

                            <span class='searchbox'>
                                    <input placeholder='Search Prescription' />
                                <span class='search-clear'></span>
                                </span>
                            <span class='searchbox'></span>


                        </section>

                <section class="full-content">
                    <div>
                        <section class="full-content">
                            <div >
                                <div>
                                     <span style="font-size:20px;  font-weight:bold;">Prescription History</span>
                                    <table width="100%">
                                       <thead>
                                            <tr>
                                                 <th>Number</th>
                                                <th>Client</th>
                                                <th>Date</th>
                                                <th>Optometrist</th>
                                                <th>Test Type</th>
                                                <th>Prescription Type</th>
                                                <th>Status</th>
                                                <th>Prescription</th>

                                            </tr>
                                        </thead>
                                        <tbody class='products-list-contents'>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>


            </div>
        </div>
    </t>


</templates>