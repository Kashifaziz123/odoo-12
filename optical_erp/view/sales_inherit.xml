<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sales_inherit_view_form" model="ir.ui.view">
			<field name="name">patient.view.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='sale_order_template_id']" position="before">
                   <field string="Prescription" name="prescription_id" domain="[('patient.partner_id','=',partner_id)]" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
